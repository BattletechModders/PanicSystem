{
  "Name": "PanicSystem",

  "Enabled": true,

  "Version": "2.7",
  "Description": "Adds basic panic system, based on mpstark's Punchin' Out.",
  "Author": "RealityMachina, forked from mpstark's work - Hard forked and Modified by donZappo and gnivler",
  "Website": "https://github.com/gnivler/PanicSystem",

  "DLL": "PanicSystem.dll",

  "Settings": {
    "Debug": false,
    "EnableKnockDownPhrases": false,
    
    /* panic */
    "PlayerCharacterAlwaysResists": false,
    "PlayersCanPanic": true,
    "EnemiesCanPanic": true,
    "MinimumArmourDamagePercentageRequired": 10,
    "OneChangePerTurn": false,
    "LosingLimbAlwaysPanics": false,
    "UnsteadyModifier": 10,
    "PilotHealthMaxModifier": 15,
    "HeadMaxModifier": 15,
    "CenterTorsoMaxModifier": 45,
    "SideTorsoMaxModifier": 20,
    "LeggedMaxModifier": 10,
    "WeaponlessModifier": 10,
    "AloneModifier": 10,
    "UnsettledAttackModifier": 1,
    "StressedAimModifier": 1,
    "StressedToHitModifier": -1,
    "PanickedAimModifier": 2,
    "PanickedToHitModifier": -2,
    "Median Morale": 50,
    "MoraleMaxModifier": 10,
    
    /* Quirks */
    "QuirksEnabled": true,
    "BraveModifier": 5,
    "DependableModifier": 5,

    /* ejection */
    "EjectEarlyPlayerLight": true,
    "EjectEarlyEnemyLight": true,
    "EjectThresholdLight": 2, /* stressed */

    "EjectEarlyPlayerMedium": false,
    "EjectEarlyEnemyMedium": false,
    "EjectThresholdMedium": 2,

    "EjectEarlyPlayerHeavy": false,
    "EjectEarlyEnemyHeavy": false,
    "EjectThresholdHeavy": 2,

    "EjectEarlyPlayerAssault": false,
    "EjectEarlyEnemyAssault": false,
    "EjectThresholdAssault": 2,
    
    "MinimumHealthToAlwaysEjectRoll": 1,
    "MaxEjectChance": 50,
    "EjectChanceMultiplier": 1,
    "GutsTenAlwaysResists": false,
    "ComboTenAlwaysResists": false,
    "TacticsTenAlwaysResists": false,
    "KnockedDownCannotEject": false,
    "ConsiderEjectingWithNoWeaps": false,
    "ConsiderEjectingWhenAlone": false,
    "BaseEjectionResist": 50,
    "GutsEjectionResistPerPoint": 2,
    "TacticsEjectionResistPerPoint": 0,
    "MaxEjectChanceWhenEarly": 10
  }
}